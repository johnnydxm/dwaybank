# =======================================================
# DwayBank Smart Wallet MVP - Production Environment
# =======================================================

# ===== SERVER CONFIGURATION =====
NODE_ENV=production
PORT=3000
API_VERSION=v1
API_BASE_URL=https://api.dwaybank.com
CORS_ORIGIN=https://app.dwaybank.com

# ===== DATABASE CONFIGURATION =====
DB_HOST=your-production-postgres-host
DB_PORT=5432
DB_NAME=dwaybank_prod
DB_USER=dwaybank_prod_user
DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_SSL=true
DB_SSL_CA=
DB_SSL_CERT=
DB_SSL_KEY=

# ===== REDIS CONFIGURATION =====
REDIS_HOST=your-production-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
REDIS_DB=0

# ===== JWT & SECURITY =====
JWT_SECRET=CHANGE_ME_32_CHAR_MINIMUM_JWT_SECRET_KEY_FOR_PRODUCTION
JWT_REFRESH_SECRET=CHANGE_ME_32_CHAR_REFRESH_SECRET_FOR_PRODUCTION
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ALGORITHM=HS384
BCRYPT_ROUNDS=12
SESSION_SECRET=CHANGE_ME_32_CHAR_SESSION_SECRET_FOR_PRODUCTION

# ===== ENCRYPTION =====
ENCRYPTION_KEY=CHANGE_ME_32_CHAR_ENCRYPTION_KEY_FOR_WALLET_DATA
AES_IV_LENGTH=16

# ===== RATE LIMITING =====
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# ===== WALLET API CONFIGURATIONS =====

# Apple Pay Configuration
APPLE_PAY_MERCHANT_ID=merchant.com.dwaybank.wallet
APPLE_PAY_CERTIFICATE_PATH=/app/certs/apple-pay-cert.pem
APPLE_PAY_PRIVATE_KEY_PATH=/app/certs/apple-pay-key.pem
APPLE_PAY_ENVIRONMENT=production

# Google Pay Configuration
GOOGLE_PAY_MERCHANT_ID=your-google-pay-merchant-id
GOOGLE_PAY_ENVIRONMENT=PRODUCTION

# MetaMask/Web3 Configuration
INFURA_PROJECT_ID=your-infura-project-id
INFURA_SECRET=your-infura-secret
ETHEREUM_NETWORK=mainnet
POLYGON_NETWORK=polygon-mainnet

# Plaid Configuration (for bank connections)
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret
PLAID_ENVIRONMENT=production

# ===== MONITORING & OBSERVABILITY =====
LOG_LEVEL=info
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key

# ===== NOTIFICATION SERVICES =====
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your-sendgrid-api-key
EMAIL_FROM=noreply@dwaybank.com

# ===== AWS SERVICES =====
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET=dwaybank-uploads-prod
S3_BACKUP_BUCKET=dwaybank-backups-prod

# ===== SSL/TLS =====
SSL_EMAIL=admin@dwaybank.com
DOMAIN_NAME=app.dwaybank.com

# ===== BACKUP CONFIGURATION =====
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ===== DOCKER REGISTRY =====
DOCKER_REGISTRY=ghcr.io
APP_VERSION=1.0.0

# ===== MONITORING AUTHENTICATION =====
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD

# ===== FEATURE FLAGS =====
WALLET_SYNC_ENABLED=true
PUSH_NOTIFICATIONS_ENABLED=true
BIOMETRIC_AUTH_ENABLED=true
MULTI_CURRENCY_ENABLED=true

# ===== COMPLIANCE & SECURITY =====
PCI_COMPLIANCE_MODE=true
KYC_VERIFICATION_ENABLED=true
AML_MONITORING_ENABLED=true
FRAUD_DETECTION_ENABLED=true

# ===== PERFORMANCE SETTINGS =====
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000
WALLET_SYNC_INTERVAL=300000
TRANSACTION_BATCH_SIZE=100

# ===== TEST DATABASE (for staging) =====
TEST_DATABASE_URL=